rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // This collection will store all data for a single setup.
    // We are allowing any authenticated user (including anonymous) to read/write.
    // This is NOT secure for production but will make your app work for development.
    // For production, you would add an `ownerId` field and check:
    // allow read, write: if request.auth != null && resource.data.ownerId == request.auth.uid;
    match /timetable_setups/{setupId} {
      allow read, write: if request.auth != null;
    }
  }
}